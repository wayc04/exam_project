<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.mapper.PclassMapper">

    <!-- 查询班级的所有学生 -->
    <select id="getStudentsByClassId" resultType="com.example.demo.entity.Students">
        SELECT * FROM students WHERE classid = #{classid}
    </select>

</mapper>